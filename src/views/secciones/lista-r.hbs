<div class="container p-4">
    <div class="row">
        <div class="container m-2">
            <button type="button" class="btn btn-secondary"><a style="text-decoration: none; color: white;"
                    href="javascript:history.back()"><i class="fas fa-undo"></i> Regresar a Casillas</a></button>
            <h3>Lista Nominal</h3>
        </div>
        <!-- Button trigger modal -->
        <div class="container m-2">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop2">
                <i class="fas fa-plus-circle"></i> Añadir Nuevo Espacio
            </button>
        </div>
        <div class="container inner" style="display: flex; align-items: center; justify-content: center;">
                <div class='inner alert alert-success alert-dismissible fade' role='alert'>¡Registro Eliminado!<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button></div>
                <div class='inner2 alert alert-danger alert-dismissible fade' role='alert'>Algo salió mal. Intenta nuevamente.<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button></div>

            </div>
        <div class="col-md-12" >

            <table id="example" class="table table-striped table-wrapper-scroll-y my-custom-scrollbar" style="height: 40vh;">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Sección</th>
                        <th scope="col">Casilla</th>
                        <th scope="col">Número de Lista</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Programa</th>
                        <th scope="col">Monto</th>
                        <th scope="col">Teléfono</th>
                        <th scope="col">Dirección</th>
                        <th scope="col">Votó</th>
                        <th scope="col">Promotor</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each lista}}
                    <tr>

                        {{#if vota_pt}}
                        <td class="id">{{idd}}</td>
                        <td scope="row" style="color:red;"> {{seccion_lista}} </td>
                        <td style="color:red;">{{casilla}} </td>
                        <td style="color:red;">{{num_lista_nominal}} </td>
                        <td style="color:red;">{{ape_pat}} {{ape_mal}} {{nom2}} </td>
                        <td style="color:red;">{{programa}} </td>
                        <td style="color:red;">{{monto}} </td>
                        <td style="color:red;">{{telefono}} </td>
                        <td style="color:red;">{{direccion}} </td>
                        {{#if voto}}
                        <td style="color:red;">Sí</td>
                        {{else}}
                        <td style="color:red;">No</td>
                        {{/if}}
                        <td style="color:red;">{{apm}} {{app1}} {{app2}}</td>
                        <td style="color:red;"><a href="/mpios/seccion/casillas/lista/editar/{{idd}}"><i class="fas fa-edit"></i></a></td>
                        <td class="text-center"><button class="eliminar_lista btn btn-primary" id="eliminar_lista"><i class="fas fa-trash-alt"></i> Eliminar</button></td>
                        {{else}}
                        <td class="id">{{idd}}</td>
                        <th scope="row"> {{seccion_lista}} </th>
                        <td>{{casilla}}</td>
                        <td>{{num_lista_nominal}} </td>
                        <td>{{ape_pat}} {{ape_mal}} {{nom2}}</td>
                        <td>{{programa}} </td>
                        <td>{{monto}} </td>
                        <td>{{telefono}} </td>
                        <td>{{direccion}} </td>
                        {{#if voto}}
                        <td>Sí</td>
                        {{else}}
                        <td>No</td>
                        {{/if}}
                        <td>Sin Promotor Asignado</td>
                        <td><a href="/mpios/seccion/casillas/lista/editar/{{idd}}"><i class="fas fa-edit"></i></a></td>
                        <td class="text-center"><button class="eliminar_lista btn btn-primary" id="eliminar_lista"><i class="fas fa-trash-alt"></i> Eliminar</button></td>
                        {{/if}}

 
                    </tr>
                    {{else}}
                    <tr>
                        <th>Sin Datos</th>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                    </tr>
                    <div>
                        <br>
                        <div class="container">
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#staticBackdrop"><a style="text-decoration: none; color: white;"><i
                                        class="fas fa-plus-circle"></i> Crear Lista Nominal</a>
                            </button>
                        </div>
                    </div>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal con Input -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Crear Lista Nominal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/mpios/seccion/casillas/lista/registrar/{{id}}" method="POST">
                <div class="modal-body">
                    Para crear la lista nominal de esta casilla, es necesario colocar en el siguiente campo el número de
                    votantes que desea crear.

                    <div class="input-group flex-nowrap">
                        <input type="text" style="display: none;" name="id" value="{{id}}">
                        <span class="input-group-text" id="addon-wrapping">#</span>
                        <input type="number" name="votantes" required class="form-control"
                            placeholder="Número de Votantes" aria-label="Username" aria-describedby="addon-wrapping">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <input type="submit" class="btn btn-primary" data-bs-target="#staticBackdrop1"><a
                        style="text-decoration: none; color: white;"><i class="fas fa-plus-circle"></i> Crear</a>
                    </input>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop2" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Añadir Nuevo Registro</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Selecciona el lugar donde quieras que se inserte el nuevo registro
            </div>
            <select id="SelectEquipmentDropdown" onchange="getval(this);" class="form-select"
                aria-label="Default select example">
                <option selected>Insertar después del</option>
                {{#each lugar}}
                <option value="{{id}}">{{num_lista_nominal}}</option>
                {{/each}}
            </select>
            <form action="/mpios/seccion/casilla/lista/add/:{{id}}" method="post">
                <div class="form-group mb-3">
                    <input type="text" style="display: none;" id="lugar" class="form-control ocultar" name="lugar"
                        placeholder="Después del" value="">
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Registrar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    var myModal = document.getElementById('myModal')
    var myInput = document.getElementById('myInput')

    myModal.addEventListener('shown.bs.modal', function () {
        myInput.focus();
    });
    function getval(sel) {
        var V1 = sel.value;
        var elem = document.getElementById('lugar');
        elem.value = V1;

    };
</script>

<style>
    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }

    .my-custom-scrollbar {
        position: relative;
        height: 200px;
        overflow: auto;
    }

    .table-wrapper-scroll-y {
        display: block;
    }
</style>

<div class="modal" id="exampleModal5" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Alerta</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ¿Seguro que desea eliminar el registro?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" id="aceptar" class="aceptar btn btn-primary">Eliminar Registro</button>
      </div>
    </div>
  </div>
</div>
<div class="container p-4">
    <div class="row">
        <div class="container p-2">
            <button type="button" class="btn btn-secondary"><a style="text-decoration: none; color: white;"
                    href="/delegados/registrar"><i class="fas fa-undo"></i> Regresar a Promotores</a></button>
            <div class="container">
                <h3>Promovidos de {{delegado2}}</h3>
            </div>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                <i class="fas fa-plus"></i> Nuevo Referido
            </button>
        </div>
        <br>
        <div class="container" style="display: flex; align-items: center; justify-content: center;">
            <div class='inner alert alert-success alert-dismissible fade' role='alert'>¡Promovido Eliminado!<button
                    type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button></div>
            <div class='inner2 alert alert-danger alert-dismissible fade' role='alert'>Algo salió mal. Intenta
                nuevamente.<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        </div>
        <div class="table-wrapper-scroll-y my-custom-scrollbar" style="height: 50vh;">

            <table id="example" class="table table-bordered table-striped mb-0">
                <thead>
                    <tr>
                        <th class="idee" style="display: none;" scope="col">Id</th>
                        <th scope="col">Secc</th>
                        <th scope="col">Cas</th>
                        <th scope="col">N-L</th>
                        <th scope="col">PT</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Programa</th>
                        <th scope="col">Monto</th>
                        <th scope="col">Teléfono</th>
                        <th scope="col">Dirección</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                
                <tbody>
                    {{#each promovidos}}
                    <tr>
                        <td style="display: none;" class="id">{{id}}</td>
                        <td>{{seccion}}</td>
                        <td>{{casilla}}</td>
                        <td>{{num_lista_nominal}}</td>
                        <td>{{vota_pt}}</td>
                        <td>{{ape_pat}} {{ape_mal}} {{nombres}}</td>
                        <td>{{programa}}</td>
                        <td>{{monto}}</td>
                        <td>{{telefono}}</td>
                        <td>{{direccion}}</td>

                        <td class="text-center"><button class="elimina_promovido btn btn-danger"
                                id="elimina_promovido"><i class="fas fa-trash"></i></button></td>
                    </tr>

                    {{else}}
                    <tr>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>

        <style>
            .my-custom-scrollbar {
                position: relative;
                height: 200px;
                overflow: auto;
            }

            .table-wrapper-scroll-y {
                display: block;
            }
        </style>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <form action="/delegados/promovidos/add/{{delegado3}}" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Asignar Referido</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="container">
                    <select class="form-select" id="seccionesLista" aria-label="Default select example">
                        <option>Selecciona una lista a mostrar</option>
                        {{#each secciones}}
                        <option value="{{id}}">{{seccion}}</option>
                        {{else}}
                        {{/each}}
                    </select>
                </div>
                <div class="modal-body">
                    Selecciona de la lista nominal a quien deseas referir
                </div>

                <div class="col-md-12" style="height: 60vh; overflow:auto;">
                    <div class="input-group input-group-sm mb-3">
                        <span class="input-group-text" id="inputGroup-sizing-sm">Buscar</span>
                        <input type="text" id="buscar"  class="form-control" aria-label="Sizing example input"
                            aria-describedby="inputGroup-sizing-sm">
                    </div>
                    <table id="example6" class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Sección</th>
                                <th scope="col">Casilla</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Dirección</th>
                                <th scope="col">Asignar</th>
                            </tr>
                        </thead>

                        <tbody>
                            {{#each listado}}
                            {{#if del_nombre}}
                            <tr>
                                <td>{{index}}</td>
                                <td style="color: red;" scope="row"> {{seccion_lista}} </td>
                                <td style="color: red;">{{casilla_lista}}</td>
                                <td style="color: red;">{{ape_pat}} {{ape_mal}} {{nom2}} </td>
                                <td style="color: red;">{{direccion}} </td>
                                <td style="color: red;">{{del_nombre}} {{del_apepat}} {{del_apemat}}</td>
                            </tr>
                            {{else}}
                            <tr>
                                <td>{{index}}</td>
                                <td> {{seccion_lista}} </td>
                                <td>{{casilla_lista}}</td>
                                <td>{{ape_pat}} {{ape_mal}} {{nom2}} </td>
                                <td>{{direccion}} </td>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="asignar"
                                            value="{{id_persona}}" id="flexCheckDefault">
                                        <label class="form-check-label" for="flexCheckDefault">
                                            Registrar
                                        </label>
                                    </div>
                                </td>
                            </tr>
                            {{/if}}

                            {{else}}
                            <tr>
                                <td>Sin Datos</td>
                                <td>Sin Datos</td>
                                <td>Sin Datos</td>
                                <td>Sin Datos</td>
                                <td>Sin Datos</td>
                                <td>Sin Datos</td>
                            </tr>
                            <div>
                            </div>
                            {{/each}}
                        </tbody>
                    </table>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary btn"><i class="fas fa-plus"></i> Asignar</button>
                </div>
            </form>
        </div>
    </div>
</div>


<div class="modal" id="exampleModalB" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Alerta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Seguro que desea eliminar al Promovido?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" id="aceptar" class="aceptar btn btn-primary">Eliminar</button>
            </div>
        </div>
    </div>
</div>

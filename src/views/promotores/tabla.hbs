<div class="container p-4">
    <div class="row">
        <div class="container">
            {{#each delegado}}
            <h3>Referidos Pendientes de {{nombre}} </h3>
            {{else}}
            <h3>Referidos Pendientes</h3>
            {{/each}}
            <br><div class="container inner" style="display: flex; align-items: center; justify-content: center;"></div>
        </div>
        <div class="table-wrapper-scroll-y my-custom-scrollbar" style="height: 80vh;">
            <table id="example" class="table table-bordered table-striped mb-0" style="width: 100%;">
                <thead>
                    <tr>
                        <th class="idee" style="display: none;" scope="col">Id</th>
                        <th scope="col"># Lista</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido Paterno</th>
                        <th scope="col">Apellido Materno</th>                        
                        <th scope="col">Dirección</td>
                        <th scope="col">Teléfono</td>
                    </tr>
                </thead>
                <tbody>
                    {{#each lista}}
                    <tr>
                        <td style="display: none;" class="id">{{id}}</td>
                        <td>{{num_lista_nominal}}</td>
                        <td>{{nombres}}</td>
                        <td>{{ape_pat}}</td>
                        <td>{{ape_mal}}</td>
                        <td>{{direccion}}</td>
                        <td>{{telefono}}</td>
                    </tr>
                    {{else}}
                    <tr>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                        <td>Sin Datos</td>
                    </tr>
                    {{/each}}
                    
                </tbody>
            </table>
            <br>
            <div class="container">
                {{#each votados}}
                    <h4 style="color: red;">Referidos que SÍ votaron: <strong>{{conteo}}</strong></h4>
                 {{else}}
                    <h4 style="color: red;">Referidos que SÍ votaron: <strong>0</strong></h4>
                 {{/each}}
            </div>
            <br>
            <div class="container">
                {{#each novotados}}
                    <h4>Referidos que NO votaron: <strong>{{conteo}}</strong></h4>
                 {{else}}
                    <h4>Referidos que NO votaron: <strong>0</strong></h4>
                 {{/each}}
            </div>
        </div>
        <style>
            .my-custom-scrollbar {
                position: relative;
                height: 200px;
                overflow: auto;
            }
            .id,.idee{
                display: none;
            }
            .table-wrapper-scroll-y {
                display: block;
            }
        </style>
    </div>
</div>

<div class="modal" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Alerta</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ¿Seguro que desea registrar el voto?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" id="aceptar" class="aceptar btn btn-primary">Guardar Voto</button>
      </div>
    </div>
  </div>
</div>